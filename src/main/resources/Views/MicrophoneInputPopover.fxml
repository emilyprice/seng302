<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="seng302.gui.MicrophoneInputPopoverController">
    <children>
        <VBox HBox.hgrow="ALWAYS">
            <children>
                <StackPane VBox.vgrow="NEVER">
                    <children>
                        <Label text="Microphone Input">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </Label>
                    </children>
                </StackPane>
                <Separator>
                    <padding>
                        <Insets bottom="5.0" top="5.0"/>
                    </padding>
                </Separator>
                <StackPane VBox.vgrow="NEVER">
                    <children>
                        <Button fx:id="recordButton" mnemonicParsing="false"
                                onAction="#startStopRecording" text="Start Recording"/>
                    </children>
                </StackPane>
                <Separator>
                    <padding>
                        <Insets bottom="5.0" top="5.0"/>
                    </padding>
                </Separator>
                <HBox VBox.vgrow="NEVER">
                    <children>
                        <VBox HBox.hgrow="NEVER">
                            <children>
                                <StackPane>
                                    <children>
                                        <Label text="Current Note">
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0"
                                                        top="10.0"/>
                                            </padding>
                                        </Label>
                                    </children>
                                </StackPane>
                                <StackPane>
                                    <children>
                                        <Rectangle arcHeight="5.0" arcWidth="5.0" disable="true"
                                                   fill="WHITE" height="100.0" stroke="BLACK"
                                                   strokeType="INSIDE" width="100.0">
                                            <VBox.margin>
                                                <Insets/>
                                            </VBox.margin>
                                        </Rectangle>
                                        <Text fx:id="currentNoteText" strokeType="OUTSIDE"
                                              strokeWidth="0.0" text="C4">
                                            <font>
                                                <Font size="18.0"/>
                                            </font>
                                        </Text>
                                    </children>
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                </StackPane>
                            </children>
                        </VBox>
                        <Separator orientation="VERTICAL"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <StackPane>
                                    <children>
                                        <Label text="Notes Detected (All):"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </StackPane>
                                <StackPane VBox.vgrow="ALWAYS">
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                    </padding>
                                    <children>
                                        <TextArea fx:id="allNotesTextArea" editable="false"
                                                  focusTraversable="false" prefHeight="100.0"
                                                  prefWidth="200.0" wrapText="true"/>
                                    </children>
                                </StackPane>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Separator>
                    <padding>
                        <Insets bottom="5.0" top="5.0"/>
                    </padding>
                </Separator>
                <StackPane>
                    <children>
                        <Button fx:id="transcriptButton" disable="true" mnemonicParsing="false"
                                onAction="#sendToTranscript" text="Use in transcript"/>
                    </children>
                </StackPane>
            </children>
        </VBox>
    </children>
</HBox>
