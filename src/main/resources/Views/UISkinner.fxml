<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXColorPicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="450.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng302.gui.UISkinnerController">
   <children>
       <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
             AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox fx:id="settings" alignment="CENTER_LEFT" minWidth="400.0" prefHeight="10.0" spacing="5.0">
               <children>
                  <VBox minHeight="-Infinity" prefHeight="100.0" prefWidth="746.0" spacing="10.0">
                     <children>
                        <Label text="Generates a theme based on the selected colour. ">
                           <VBox.margin>
                               <Insets left="20.0" top="20.0"/>
                           </VBox.margin>
                           <font>
                               <Font size="14.0"/>
                           </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                           <VBox.margin>
                               <Insets left="5.0"/>
                           </VBox.margin>
                           <children>
                              <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="718.0" styleClass="primary">
                                 <children>
                                     <Label text="Select a colour:" styleClass="primaryText">
                                       <HBox.margin>
                                           <Insets left="20.0" right="10.0"/>
                                       </HBox.margin>
                                    </Label>
                                     <JFXColorPicker fx:id="jfxColourPicker" onAction="#changeColour"
                                                     promptText="Select a colour" styleClass="primary"/>
                                 </children>
                                 <HBox.margin>
                                     <Insets/>
                                 </HBox.margin>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
             <HBox prefHeight="30.0"/>
         </children>
      </VBox>
   </children>
</AnchorPane>
