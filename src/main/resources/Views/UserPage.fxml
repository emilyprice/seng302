<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.StackedBarChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng302.gui.UserPageController">
    <top>
        <AnchorPane fx:id="topPane" prefHeight="137.0" prefWidth="600.0"
                    BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="imageDP" fitHeight="100.0" fitWidth="100.0" layoutX="22.0" layoutY="23.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </AnchorPane>
    </top>
    <left>
        <ScrollPane hbarPolicy="NEVER" prefHeight="444.0" prefViewportHeight="200.0"
                    prefViewportWidth="100.0" prefWidth="209.0" BorderPane.alignment="CENTER">
         <content>
             <VBox fx:id="scrollPaneVbox" alignment="TOP_CENTER" layoutX="22.0" layoutY="166.0"/>
         </content>
      </ScrollPane>
    </left>
    <right>
        <ScrollPane hbarPolicy="NEVER" prefHeight="500.0" prefViewportHeight="436.0"
                    prefViewportWidth="500.0">
            <content>
                <VBox fx:id="stats" alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0"
                               prefWidth="200.0" text="Latest Attempt"/>
                        <StackedBarChart fx:id="recentBar" alternativeRowFillVisible="false"
                                         horizontalGridLinesVisible="false"
                                         horizontalZeroLineVisible="false" layoutX="10.0"
                                         layoutY="247.0" legendVisible="false" maxHeight="50.0"
                                         maxWidth="500.0" verticalGridLinesVisible="false"
                                         verticalZeroLineVisible="false">
                            <xAxis>
                                <NumberAxis minorTickVisible="false" opacity="0.0"
                                            tickLabelsVisible="false" tickMarkVisible="false"
                                            fx:id="xAxis1"/>
                            </xAxis>
                            <yAxis>
                                <CategoryAxis fx:id="yAxis1" disable="true" opacity="0.0"
                                              tickLabelsVisible="false" tickMarkVisible="false"
                                              visible="false"/>
                            </yAxis>
                        </StackedBarChart>
                        <Label fx:id="chartTitle" alignment="CENTER" contentDisplay="CENTER"
                               text="Overall Stats" textAlignment="CENTER"/>
                        <StackedBarChart fx:id="stackedBar" alternativeRowFillVisible="false"
                                         horizontalGridLinesVisible="false"
                                         horizontalZeroLineVisible="false" legendVisible="false"
                                         maxHeight="50.0" maxWidth="500.0"
                                         verticalGridLinesVisible="false"
                                         verticalZeroLineVisible="false">
                            <xAxis>
                                <NumberAxis minorTickVisible="false" opacity="0.0"
                                            tickLabelsVisible="false" tickMarkVisible="false"
                                            fx:id="xAxis"/>
                            </xAxis>
                            <yAxis>
                                <CategoryAxis fx:id="yAxis" disable="true" opacity="0.0"
                                              tickLabelsVisible="false" tickMarkVisible="false"
                                              visible="false"/>
                            </yAxis>
                        </StackedBarChart>
                        <Label prefHeight="15.0" prefWidth="56.0" text="Badges"
                               textAlignment="CENTER"/>
                        <AnchorPane fx:id="badgePane" maxHeight="85.0" maxWidth="351.0"
                                    minHeight="-Infinity" minWidth="-Infinity" prefHeight="85.0"
                                    prefWidth="351.0"/>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </right>
</BorderPane>
