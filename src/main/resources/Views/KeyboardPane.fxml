<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<TitledPane fx:id="titlePane" contentDisplay="GRAPHIC_ONLY" focusTraversable="false"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="seng302.gui.KeyboardPaneController">
   <content>
       <StackPane fx:id="keyboardStack" alignment="TOP_LEFT" focusTraversable="true"
                  maxHeight="100.0" prefHeight="0.0">
          <padding>
              <Insets bottom="0" left="0" right="0" top="0"/>
          </padding>
         <children>
             <HBox fx:id="keyboardBox" prefHeight="100.0" snapToPixel="false">
               <StackPane.margin>
                   <Insets right="-0.0"/>
               </StackPane.margin>
            </HBox>
             <AnchorPane fx:id="blackKeys" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0"
                         snapToPixel="false" StackPane.alignment="TOP_CENTER"/>
         </children>
      </StackPane>
   </content>
   <graphic>
       <HBox maxWidth="1.7976931348623157E308" prefHeight="20.0" prefWidth="150.0">
         <children>
             <StackPane alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" minHeight="0.0"
                        prefHeight="20.0" prefWidth="100.0" AnchorPane.leftAnchor="70.0"
                        AnchorPane.topAnchor="13.0">
               <children>
                   <Label focusTraversable="false" prefHeight="20.0" text="Keyboard"
                          StackPane.alignment="CENTER"/>
               </children>
            </StackPane>
             <StackPane fx:id="rightStack" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308"
                        prefHeight="48.0" AnchorPane.leftAnchor="0.0">
               <children>
                   <Button fx:id="settingsButton" focusTraversable="false" minHeight="10.0"
                           mnemonicParsing="false" onAction="#toggleSettings" prefHeight="20.0"
                           text="Settings"/>
               </children>
            </StackPane>
         </children>
      </HBox>
   </graphic>
</TitledPane>
