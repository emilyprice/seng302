<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="transcriptAnchor" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng302.gui.TranscriptPaneController">
    <!--<children>-->
      <!--<Pane layoutX="-283.0" style="-fx-background-color: brown;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">-->
         <children>
             <ToolBar fx:id="playbackToolbar" maxHeight="-Infinity" minHeight="-Infinity"
                      prefHeight="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                 <items>
                     <Label text="Command Playback Mode">
                         <padding>
                             <Insets right="10.0"/>
                         </padding>
                         <font>
                             <Font name="System Bold" size="16.0"/>
                         </font>
                     </Label>
                     <Button fx:id="playall" mnemonicParsing="false" text="Play All">
                         <graphic>
                             <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                                        preserveRatio="true">
                                 <image>
                                     <Image url="@../images/play-sharp.png"/>
                                 </image>
                             </ImageView>
                         </graphic>
                     </Button>
                     <Button fx:id="playnext" mnemonicParsing="false" text="Play Next">
                         <graphic>
                             <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                                        preserveRatio="true">
                                 <image>
                                     <Image url="@../images/play-one.png"/>
                                 </image>
                             </ImageView>
                         </graphic>
                     </Button>
                     <Label fx:id="nextcommand" text="Next Command: ">
                         <padding>
                             <Insets left="10.0"/>
                         </padding>
                     </Label>
                     <Label fx:id="commandvalue">
                         <padding>
                             <Insets right="10.0"/>
                         </padding>
                     </Label>
                     <Button fx:id="stop" mnemonicParsing="false" text="Exit Playback Mode">
                         <graphic>
                             <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                                        preserveRatio="true">
                                 <image>
                                     <Image url="@../images/letter-x.png"/>
                                 </image>
                             </ImageView>
                         </graphic>
                     </Button>
                 </items>
             </ToolBar>
             <TextArea fx:id="txtTranscript" editable="false" focusTraversable="false"
                       prefHeight="278.0" prefWidth="724.0"
                       promptText="Enter a command in the box below. Type 'help' for more information on the available commands."
                       wrapText="true" AnchorPane.bottomAnchor="65.0" AnchorPane.leftAnchor="0"
                       AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0.0"/>
             <TextField fx:id="txtCommand" layoutX="11.0" layoutY="286.0"
                        onKeyPressed="#handleKeyPressed" prefHeight="30.0" prefWidth="516.0"
                        AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="20.0"
                        AnchorPane.rightAnchor="208.0"/>
             <Button fx:id="btnGo" styleClass="primary" layoutX="556.0" layoutY="298.0" mnemonicParsing="false"
                     onAction="#goAction" prefHeight="30.0" prefWidth="74.0" text="Go"
                     AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="114.0"/>
             <Button fx:id="helpButton" layoutX="627.0" layoutY="298.0" mnemonicParsing="false"
                     onAction="#showDslRef" prefHeight="30.0" prefWidth="74.0" text="Help"
                     AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="20.0"/>
         </children>
      <!--</Pane>-->
    <!--</children>-->
</AnchorPane>
