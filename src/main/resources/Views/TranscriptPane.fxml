<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng302.gui.TranscriptPaneController">
   <children>
      <AnchorPane minWidth="30.0" prefHeight="343.0" prefWidth="30.0">
         <children>
             <JFXButton layoutX="-79.0" layoutY="157.0" onAction="#expandTranscript"
                        prefHeight="30.0" prefWidth="189.0" rotate="-90.0" text="Transcript"/>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="transcriptAnchor" minHeight="0.0" minWidth="0.0">
          <!--<children>-->
            <!--<Pane layoutX="-283.0" style="-fx-background-color: brown;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">-->
               <children>
                   <ToolBar fx:id="playbackToolbar" maxHeight="-Infinity" minHeight="-Infinity"
                            minWidth="0.0" prefHeight="40.0" AnchorPane.leftAnchor="0.0"
                            AnchorPane.rightAnchor="0.0">
                       <items>
                           <Label text="Command Playback Mode">
                               <padding>
                                   <Insets right="10.0" />
                               </padding>
                               <font>
                                   <Font name="System Bold" size="16.0" />
                               </font>
                           </Label>
                           <Button fx:id="playall" mnemonicParsing="false" text="Play All">
                               <graphic>
                                   <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                           <Image url="@../images/play-sharp.png" />
                                       </image>
                                   </ImageView>
                               </graphic>
                           </Button>
                           <Button fx:id="playnext" mnemonicParsing="false" text="Play Next">
                               <graphic>
                                   <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                           <Image url="@../images/play-one.png" />
                                       </image>
                                   </ImageView>
                               </graphic>
                           </Button>
                           <Label fx:id="nextcommand" text="Next Command: ">
                               <padding>
                                   <Insets left="10.0" />
                               </padding>
                           </Label>
                           <Label fx:id="commandvalue">
                               <padding>
                                   <Insets right="10.0" />
                               </padding>
                           </Label>
                           <Button fx:id="stop" mnemonicParsing="false" text="Exit Playback Mode">
                               <graphic>
                                   <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                           <Image url="@../images/letter-x.png" />
                                       </image>
                                   </ImageView>
                               </graphic>
                           </Button>
                       </items>
                   </ToolBar>
                   <TextArea fx:id="txtTranscript" editable="false" focusTraversable="false" minHeight="0.0" minWidth="0.0" prefHeight="278.0" prefWidth="724.0" promptText="Enter a command in the box below. Type 'help' for more information on the available commands." wrapText="true" AnchorPane.bottomAnchor="65.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                   <TextField fx:id="txtCommand" layoutX="11.0" layoutY="286.0" minHeight="0.0" minWidth="0.0" onKeyPressed="#handleKeyPressed" prefHeight="30.0" prefWidth="601.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="123.0" />
                   <JFXButton fx:id="btnGo" layoutX="630.0" layoutY="298.0" minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onAction="#goAction" prefHeight="30.0" prefWidth="100.0" styleClass="primary" text="Go" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="14.0" />
